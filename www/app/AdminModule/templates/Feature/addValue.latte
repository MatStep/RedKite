@{block content}
<div class="box box-primary">
		<div class="box-header with-border">
			<h2 class="box-title">
				Pridať hodnotu
			</h2>
			<a n:href="Feature:" class="pull-right"><i class="fa fa-close"></i></a>
		</div>
		<div class="box-body">
			{snippet list}
			<h2>{$presenter->getFeatureLang($feature->id)->name}</h2>
			<p>
				{foreach $presenter->getFeatureValues($feature->id) as $featureValue}
					{$presenter->getFeatureValueLang($featureValue->id)->value} <a n:href="Feature:removeFeatureValue $featureValue->id" style="margin-top: 10px; width: 130px;" class='itemTrash'><i class="fa fa-close"></i></a>, 
				{/foreach}
			</p>
			{/snippet}

			{snippet form}
			{form featureValueForm}

			<div n:if="$form->hasErrors()">
				<ul class="errors">
					<li n:foreach="$form->errors as $error"><strong>{$error}</strong></li>
				</ul>
			</div>
			<div class="form-group">
				<label for="inputValue">
					Názov ({$lang})
				</label>
				{input value}
			</div>
			{input add}
			{/form}
			{/snippet}
		</div>
	</div>

{* Script for changing active menu *}
<script>
	$(function() {
		unsetAndSetActive('#features', '#addFeature');
	});
</script>
{/block}